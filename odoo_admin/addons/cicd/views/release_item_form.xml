<odoo>
	<data noupdate="0">
		<record id="view_cicd_release_item_form" model="ir.ui.view">
			<field name="name">cicd.release.item form</field>
			<field name="model">cicd.release.item</field>
			<field name="arch" type="xml">
				<form string="">
					<header>
						<field name="state" widget="statusbar" attrs="{'readonly': True}" />
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<button type="object" class="oe_stat_button" icon="fa-recycle" name="retry" string="Retry" states='failed' />
							<button type="object" class="oe_stat_button" icon="fa-times" name="set_to_ignore" string="Ignore Release" states='new,failed' />
							<button type="object" class="oe_stat_button" icon="fa-check" name="reschedule" string="Reschedule" states="ignore"/>
						</div>
						<group>
							<field name="release_id" readonly="1" />
							<field name="name" readonly="1" />
							<field name="planned_date" />
							<field name="final_curtain" />
							<field name="release_type" readonly="1" />
							<field name="computed_summary" />
						</group>
						<notebook>
							<page string="Log">
								<field name="log_release"/>
							</page>
							<page string="Branches" name="branches">
								<field name="branch_ids" attrs="{'readonly': [('release_type', '!=', 'hotfix')]}">
									<tree>
										<field name="name"/>
										<field name="state"/>
										<field name="enduser_summary"/>
									</tree>
								</field>
							</page>
							<page string="Commits" name="commits">
								<field name="commit_ids" readonly="1">
									<tree
										decoration-danger="approval_state == 'declined' or test_state == 'failed'"
										decoration-muted="not approval_state and not test_state"
										decoration-success="force_approved or approval_state == 'approved' or test_state == 'success'"
									>
										<button name="open_window" string="" icon="fa-external-link" type="object" />
										<field name="name"/>
										<field name="test_state"/>
										<field name="approval_state"/>
										<field name="force_approved" widget="boolean_toggle"/>
										<field name="date" />
										<field name="author"/>
										<field name="text"/>
										<button name="view_changes" string="" icon="fa-search" type="object" />
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>
	</data>
</odoo>
