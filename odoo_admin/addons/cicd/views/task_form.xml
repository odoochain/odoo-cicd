<odoo>
	<data noupdate='0'>

	<record id="view_cicd_task_form" model="ir.ui.view">
		<field name="name">cicd.task form</field>
		<field name="model">cicd.task</field>
		<field name="arch" type="xml">
			<form string="">
				<header></header>
				<sheet>
					<group string="" col="4">
						<field name="name" />
						<field name="state" />
						<field name="date"/>
						<field name="duration"/>
						<field name="commit_id"/>
					</group>
					<group string="Error" style="font-size: 7pt;">
						<field name="error" attrs="{'invisible': [('error', '=', False)]}"/>
					</group>
					<group string="Log" style="font-size: 7pt;">
						<field name="log" nolabel='1'/>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	</data>
</odoo>
