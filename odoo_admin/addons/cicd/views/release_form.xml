<odoo>
	<data noupdate="0">
		<record id="view_cicd_release_form" model="ir.ui.view">
			<field name="name">cicd.release form</field>
			<field name="model">cicd.release</field>
			<field name="arch" type="xml">
				<form string="">
					<header>
						<button string="Pull into candidate" name="collect_tested_branches" class="oe_highlight" type="object"/>
						<button string="Make Hotfix" name="make_hotfix" type="object"/>
						<field name="state" widget="statusbar" />
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<field name="active" invisible="1"/>
							<button type="object" class="oe_stat_button" icon="fa-times" name="toggle_active" string="Disable" attrs="{'invisible': [('active', '=', False)]}"/>
							<button type="object" class="oe_stat_button" icon="fa-check" name="toggle_active" string="Activate" attrs="{'invisible': [('active', '=', True)]}"/>
						</div>
						<group string="Release" col="2">
							<field name="name" />
							<field name="repo_id"/>
							<field name="project_name"/>
							<field name="branch_id" domain="[('repo_id', '=', repo_id)]"/>
							<field name="candidate_branch_id" domain="[('repo_id', '=', repo_id)]"/>
							<field name="machine_ids" widget="many2many_tags" required='1' />
							<field name="sequence_id"/>
						</group>
						<group string="Continuous Deployment">
							<field name="countdown_minutes"/>
							<field name="auto_release"/>
							<field name="auto_release_cronjob_id" readonly='1' attrs="{'invisible': [('auto_release', '=', False)]}"/>
							<field name="planned_timestamp_after_preparation" attrs="{'invisible': [('auto_release', '=', False)], 'required': [('auto_release', '=', True)]}" />
						</group>
						<notebook>
							<page string="Versions">
								<field name="item_ids">
									<tree editable="bottom" create='0' delete='0'>
										<button name="open_window" string="" icon='fa-external-link' type="object" />
										<field name="name" readonly='1'/>
										<field name="try_counter"/>
										<field name="release_type"/>
										<field name="branch_ids" widget='many2many_tags' attrs="{'readonly': [('release_type', '!=', 'hotfix')]}"/>
										<field name="final_curtain"/>
										<field name="planned_date"/>
										<field name="count_failed_queuejobs"/>
										<field name="done_date" readonly='1'/>
										<field name="state" readonly='1'/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>
	</data>
</odoo>
